{
  "name": "cvtheque",
  "version": "10.18.0",
  "private": true,
  "packageManager": "pnpm@7.27.1",
  "scripts": {
    "prebuild": "prisma generate && prisma migrate deploy",
    "build:1-next": "cross-env NODE_ENV=production next build",
    "build:2-server": "tsc --project tsconfig.server.json",
    "build": "run-s build:*",
    "dev:next": "next dev",
    "dev": "pnpm migrate-dev && pnpm dev:next",
    "db-up": "docker-compose up -d",
    "db-seed": "prisma db seed",
    "db-migrate-dev": "prisma migrate dev",
    "db-nuke": "docker-compose down --volumes --remove-orphans",
    "dx": "run-s db-up db-migrate-dev db-seed dev",
    "dev-nuke": "rm -rf prisma/*.db**",
    "generate": "prisma generate",
    "migrate-dev": "prisma migrate dev",
    "migrate": "prisma migrate deploy",
    "start": "cross-env NODE_ENV=production node dist/server/prodServer.js",
    "studio": "prisma studio",
    "lint": "eslint --cache --ext \".js,.ts,.tsx\" --report-unused-disable-directives --report-unused-disable-directives src",
    "lint-fix": "pnpm lint --fix",
    "test-dev": "cross-env APP_ENV=test start-server-and-test dev 3000 test",
    "test-start": "cross-env APP_ENV=test WS_URL=ws://localhost:3000 start-server-and-test start 3000 test",
    "test": "playwright test",
    "mail": "email dev",
    "postinstall": "prisma generate"
  },
  "prisma": {
    "seed": "tsx prisma/seed.ts"
  },
  "prettier": {
    "printWidth": 90,
    "trailingComma": "all",
    "singleQuote": true,
    "semi": false
  },
  "dependencies": {
    "@hookform/resolvers": "^3.3.2",
    "@next-auth/prisma-adapter": "1.0.6",
    "@next/swc-darwin-x64": "^13.4.4",
    "@prisma/client": "^5.4.2",
    "@react-email/components": "^0.0.7",
    "@react-email/container": "0.0.8",
    "@react-email/html": "0.0.4",
    "@react-email/section": "0.0.9",
    "@react-email/text": "0.0.5",
    "@tanstack/react-query": "^4.36.1",
    "@trpc/client": "^10.41.0",
    "@trpc/next": "^10.41.0",
    "@trpc/react-query": "^10.41.0",
    "@trpc/server": "^10.41.0",
    "clsx": "^1.2.1",
    "daisyui": "^3.9.3",
    "global": "^4.4.0",
    "next": "^13.4.4",
    "next-auth": "^4.22.1",
    "nodemailer": "^6.9.3",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-email": "1.9.4",
    "react-hook-form": "7.45.0",
    "react-select": "^5.7.7",
    "react-toastify": "^9.1.3",
    "superjson": "^1.13.3",
    "tsx": "^3.14.0",
    "uuid": "^9.0.1",
    "ws": "^8.14.2",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@netlify/esbuild-darwin-64": "^0.14.39",
    "@netlify/plugin-nextjs": "4.36.1",
    "@playwright/test": "^1.39.0",
    "@tanstack/react-query-devtools": "^4.36.1",
    "@types/node": "^18.18.6",
    "@types/nodemailer": "^6.4.13",
    "@types/react": "^18.2.31",
    "@types/uuid": "^9.0.6",
    "@types/ws": "^8.5.8",
    "@typescript-eslint/eslint-plugin": "^5.62.0",
    "@typescript-eslint/parser": "^5.62.0",
    "autoprefixer": "^10.4.16",
    "cross-env": "^7.0.3",
    "eslint": "^8.52.0",
    "eslint-config-next": "^13.5.6",
    "eslint-config-prettier": "^8.10.0",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.4.31",
    "prettier": "^2.8.8",
    "prisma": "^5.4.2",
    "tailwindcss": "^3.3.3",
    "typescript": "^4.9.5"
  },
  "publishConfig": {
    "access": "restricted"
  }
}
